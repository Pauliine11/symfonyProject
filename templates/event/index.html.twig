{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h1 class="box-index1 text-center mt-5">Les Événements</h1>
    {% if app.user %}
        <h2 class="text-center fs-4 mt-5">Bonjour <span class="purple text-decoration-underline">{{ app.user.pseudo}}</span>, nous espérons ( ou pas ) que vous ferez le bon choix .. </h2>
    {% endif %}

    {% for event in events %}
        <div class="m-5 d-flex justify-content-center">
            <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn btn-dark btn-lg col-8"><span>{{ event.title}}</span></a>
        </div>
    {% else %}
        <p>Il n'y a pas encore d'événement</p>
    {% endfor %}
    <div class="d-flex justify-content-center">
        <a href="{{ path('app_event_new') }}" class="btn colorIcons btn-dark margin-bot"><i class="fa-solid fa-ghost"></i> Créer un Événement</a>
    </div>
</div>
{% endblock %}