{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1 class="text-center">Inscrivez-vous !</h1>
        <div class="container d-flex justify-content-center mt-5 margin-bot">
            <div class="my-custom-class-for-errors">
                {{ form_errors(registrationForm) }}
            </div>
            <div class="row text-light mt-2 log register">
                {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.pseudo) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
                {# {{ form_row(registrationForm.agreeTerms) }} #}
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-dark mt-2 font-weight-bold">S'inscrire</button>
                    {{ form_end(registrationForm) }}
                </div
            </div>
        </div>
    
{% endblock %}

