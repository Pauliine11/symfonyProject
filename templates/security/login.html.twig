{% extends 'base.html.twig' %}

{% block body %}

<div class="row text-center">
<h1 class="mt-5">Connectez-vous</h1>
</div>

<div class="container">
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous etes connecter en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
            </div>
        {% endif %}

        <div class=" container-fluid bgLight log margin-bot"  
            <label class="text-light font-weight-bold" for="username">Email :</label>
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control mt-2" autocomplete="email" required autofocus>

            <label class="mt-2 text-light font-weight-bold" for="password">Mot de passe :</label>
            <input type="password" name="_password" id="password" class="form-control mt-2" autocomplete="current-password" required>
            <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

            <button class="btn btn-dark mt-2" type="submit">
            <img class="icons" src="{{ asset ('img/iconLantern.png') }}" alt="icon représentant une lanterne" />Connexion</button>
        </div>

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Remember me</label>
            </div>
        #}
    </form>
</div>
{% endblock %}    

   